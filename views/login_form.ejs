<%- include('header'); -%>
    <section class="h-100 h-custom">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-lg-8 col-xl-6">
            <div class="card rounded-3">
              <div class="card-body p-4 p-md-5">
                <h3 class="mb-4 pb-2 pb-md-0 mb-md-3 px-md-2 label" >Inicio sesion</h3>
                <div class="px-md-2 mb-3 smaller-font">¿No tenes una cuenta? <a href="/sign-up">¡registrate!</a></div>
                <form class="px-md-2" method="POST" action="">
                  
                  <div class="form-outline mb-4">
                    <label class="label" for="email">Email</label>
                    <input type="text" name="email" id="email" class="form-control" value="<%= typeof user==="undefined"? '': user.email %>" />
                  </div>
                    
                  <div class="form-outline mb-4">
                    <label class="label" for="password">Contraseña</label>
                    <input type="password" name="password" id="password" class="form-control" />
                  </div>
                  <div class="form-error-msg">
                    <% if(typeof messages!=="undefined") {%>
                      <%= messages[0] %>
                    <% } %>  
                  </div>
                  <button type="submit" class="btn btn-success btn-lg mb-1">Inicia sesion</button>
    
                </form>
    
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
<%- include('footer'); -%>